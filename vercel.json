{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/productos/([^/]+)",
      "methods": ["GET", "PUT", "DELETE"],
      "dest": "main.py"
    },
    {
      "src": "/api/productos",
      "methods": ["GET", "POST"],
      "dest": "main.py"
    },
    {
      "src": "/api/carrusel/([^/]+)",
      "methods": ["GET", "PUT", "DELETE"],
      "dest": "main.py"
    },
    {
      "src": "/api/carrusel",
      "methods": ["GET", "POST"],
      "dest": "main.py"
    },
    {
      "src": "/api/auth/(.*)",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "dest": "main.py"
    },
    {
      "src": "/api/(.*)",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization, Cookie, Set-Cookie"
        }
      ]
    }
  ],
  "env": {
    "ENVIRONMENT": "production"
  }
}